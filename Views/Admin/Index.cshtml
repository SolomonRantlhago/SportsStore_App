@model ProductsListViewModel

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-right">Price</th>
        <th class="text-center">Actions</th>
    </tr>

    @foreach (var item in Model.Products)
    {
        <tr>

            <td class="text-right">@item.ProductID</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td class="text-center">
                <form>
                    <a class="btn btn-sm btn-warning" asp-controller="Admin" asp-action="Edit" asp-route-id="@item.ProductID">
                        Edit
                    </a>
                    <button class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this Product?')"
                            asp-controller="Admin" asp-action="Delete" asp-route-id="@item.ProductID">
                        Delete
                    </button>
                </form>
            </td>
        </tr>

    }
</table>
<div class="text-center">
    <a asp-controller="Admin" asp-action="Create" class="btn btn-primary">Add Product</a>
</div>