@model Product

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Create" method="post" role="form" class="p-1">
    <input type="hidden" asp-for="ProductID" />
    <input type="hidden" asp-for="CategoryID" />
    <input type="hidden" asp-for="Category.CategoryName" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="CategoryID"></label>
        <div><span asp-validation-for="CategoryID" class="text-danger"></span></div>
        <select asp-for="CategoryID" class="form-control"
                asp-items="ViewBag.CategoryID">
            <option value="">---Select Category---</option>   
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-secondary" asp-controller="Admin" asp-action="Index">Cancel</a>
    </div>
</form>